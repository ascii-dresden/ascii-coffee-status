{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["node_modules"],
    "rules": {
        "no-unused-vars": "warn",
        "semi": ["warn", "always", { "omitLastInOneLineBlock": true }],
        "eqeqeq": ["warn", "always"],
        "quotes": ["warn", "double"]
    }
}
